<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/complaint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Student Complaints"
        android:layout_marginTop="20dp"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/complaint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Complaint 1"
        android:textSize="30dp" />

    <Button
        android:id="@+id/complaint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Complaint 2"
        android:textSize="30dp" />

    <Button
        android:id="@+id/complaint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Complaint 3"
        android:textSize="30dp" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:layout_marginLeft="30dp"
        android:text="Back"
        android:textSize="20dp"
        android:layout_gravity="start|bottom"
        android:background="@color/black" />

</LinearLayout>