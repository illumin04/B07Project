<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/announce_complaint">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter event name"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter event details" />

        <TextView
            android:id="@+id/time"
            android:layout_below="@+id/details"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter event scheduled time:"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:hint="Month" />

        <EditText
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/slash1"
            android:layout_below="@+id/time"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:hint="Day" />

        <TextView
            android:id="@+id/slash1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/month"
            android:layout_below="@+id/time"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="/"/>

        <TextView
            android:id="@+id/slash2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/day"
            android:layout_below="@+id/time"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="/"/>

        <EditText
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/slash2"
            android:layout_below="@+id/time"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:hint="Year" />

        <EditText
            android:id="@+id/stu_limit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/month"
            android:layout_marginTop="30dp"
            android:hint="Enter student limit"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:inputType="number"
            android:maxLength="10000"/>

        <TextView
            android:id="@+id/eventMessage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/stu_limit"/>

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventMessage"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:text="Back"
            android:textSize="20sp"
            android:layout_gravity="start|bottom"
            android:background="@color/black" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventMessage"
            android:layout_toEndOf="@+id/back_btn"
            android:layout_marginTop="100dp"
            android:layout_marginStart="140dp"
            android:layout_gravity="bottom|end"
            android:background="@color/black"
            android:text="Submit"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>