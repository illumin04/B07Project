<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detailedAnnouncementTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentRatingButton"
        android:layout_above="@id/backButton"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

    <!-- RSVP Button -->
    <Button
        android:id="@+id/rsvpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSVP"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"/>

    <!-- Comment/Rating Button -->
    <Button
        android:id="@+id/commentRatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment/Rating"
        android:layout_below="@id/rsvpButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>

</RelativeLayout>
