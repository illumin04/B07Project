<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/events_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="List of Events"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/new_event_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Event"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:background="@color/black"/>

    <Button
        android:id="@+id/event1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Event 1"
        android:textSize="30dp" />

    <Button
        android:id="@+id/event2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Event 2"
        android:textSize="30dp" />

    <Button
        android:id="@+id/event3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Event 3"
        android:textSize="30dp" />

    <Button
        android:id="@+id/event4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Event 4"
        android:textSize="30dp" />

    <Button
        android:id="@+id/event5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Event 5"
        android:textSize="30dp" />

    <Button
        android:id="@+id/event6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Event 6"
        android:textSize="30dp" />

    <Button
        android:id="@+id/event7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Event 7"
        android:textSize="30dp" />

    <Button
        android:id="@+id/event8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:text="Event 8"
        android:textSize="30dp" />

        <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:layout_marginLeft="10dp"
        android:text="Back"
        android:textSize="20dp"
        android:layout_gravity="start|bottom"
        android:background="@color/black" />

    </LinearLayout>

</ScrollView>
